---
// SecondaryButton.astro
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;
const Element = href ? 'a' : 'button';
---

<Element 
  {...Astro.props} 
  class:list={['btn-base', 'btn-secondary', className]} 
>
  <slot />
</Element>

<style>
  /* Estilos Base Comunes (replicados para que el componente sea totalmente independiente) */
  .btn-base {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
    border: none;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease, background-color 0.2s ease;
  }
  
  /* Estilo Espec√≠fico Secundario: usa el color de acento */
  .btn-secondary {
    background-color: var(--accent-color);
    color: white; /* Color de texto que contrasta con el acento */
  }

  /* Efecto Hover Secundario: Necesitamos un color de hover para el acento */
  .btn-secondary:hover {
    /* Usaremos un tono oscuro basado en el color de acento #00bcd4 (ej. #0097a7) */
    background-color: #0097a7; 
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }
</style>